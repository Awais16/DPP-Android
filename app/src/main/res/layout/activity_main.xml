<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:orientation="vertical">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Start Capturing" android:id="@+id/bt_start" android:enabled="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:id="@+id/tv_status" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Junk Discarded: 0"
            android:id="@+id/tv_discardCount" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Battery: --"
            android:id="@+id/tv_battery" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_co2"
            android:layout_width="match_parent"
            android:layout_height="400dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:text="CO2" android:id="@+id/tv_co2"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_co"
            android:layout_width="match_parent"
            android:layout_height="400dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:text="CO" android:id="@+id/tv_co"/>


        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_temp"
            android:layout_width="match_parent"
            android:layout_height="400dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:text="@string/labelTempChart" android:id="@+id/tv_temp"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_compare"
            android:layout_width="match_parent"
            android:layout_height="500dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:text="Comparison" android:id="@+id/tv_compare"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_acceleration"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:text="@string/labelXleroGraph" android:id="@+id/tv_acceleration"/>


    </LinearLayout>

</ScrollView>
